{
    "BlockType": "stack",
    "Orientation": "Vertical",
    "Width": 580,
    "Items": [
        {
            "BlockType": "dock",
            "Orientation": "Horizontal",
            "BackgroundImage": "images/Modern/Row/{Item.Team.Name}_dark.png",
            "Triggers": [
                {
                    "Condition": "{Item.IsReserve}",
                    "Property": "BackgroundImage",
                    "Value": "images/Modern/Row/reserve_dark.png"
                },
                {
                    "Condition": "{NotF1SeasonOrCustomTeams}",
                    "Property": "BackgroundImage",
                    "Value": "images/Modern/Row/reserve_dark.png"
                }
            ],
            "Width": 575,
            "Height": 86,
            "MarginTop": 0,
            "MarginBottom": 5,
            "MarginLeft": 3,
            "MarginRight": 3,
            "Items": [
                //left part number
                {
                    "BlockType": "text",
                    "Width": 40,
                    "MarginLeft": 20,
                    "Source": "{Item.Position}",
                    "HorizontalAlignment": "Left",
                    "VerticalAlignment": "Center",
                    "FontName": "{FontNameBold}",
                    "Foreground": "{GreyText}",
                    "FontSize": 36
                },
                {
                    "BlockType": "shape",
                    "VerticalAlignment": "Center",
                    "Width": 5,
                    "Height": 55,
                    "Opacity": 100,
                    "ShapeOptions": {
                        "Type": "Rectangle",
                        "Fill": "{Item.Team.Color}"
                    }
                },
                {
                    "BlockType": "stack",
                    "Orientation": "Vertical",
                    "VerticalAlignment": "Center",
                    "Height": 70,
                    "Width": "330",
                    "Items": [
                        {
                            "BlockType": "stack",
                            "Orientation": "Horizontal",
                            "Items": [
                                //Real name
                                {
                                    "BlockType": "text",
                                    "MarginLeft": 18,
                                    "Source": "{Item.Driver.RealName}",
                                    "HorizontalAlignment": "Left",
                                    "FontName": "{FontNameBold}",
                                    "Foreground": "{GreyText}",
                                    "FontSize": 24
                                },
                                //Clear
                                {
                                    "BlockType": "image",
                                    "Height": 22,
                                    "VerticalAlignment": "Center",
                                    "ImageOptions": {
                                        "Path": "images/Clear.png",
                                        "VerticalAlignment": "Center"
                                    }
                                }
                            ]
                        },
                        {
                            "BlockType": "stack",
                            "Orientation": "Horizontal",
                            "MarginTop": 15,
                            "Items": [
                                //name
                                {
                                    "BlockType": "text",
                                    "MarginLeft": 18,
                                    "Source": "{Item.Driver.Name}",
                                    "HorizontalAlignment": "Left",
                                    "FontName": "{FontNameBold}",
                                    "Foreground": "{GreyText}",
                                    "FontSize": 22
                                },
                                //flag
                                {
                                    "BlockType": "image",
                                    "RenderIf":"{ShowCountryFlagsForDrivers}",
                                    "Height": 22,
                                    "MarginLeft": 5,
                                    "VerticalAlignment": "Center",
                                    "ImageOptions": {
                                        "Path": "{Item.Driver.Nationality.LogoPath}",
                                        "VerticalAlignment": "Center"
                                    }
                                },
                                //platform
                                {
                                    "BlockType": "image",
                                    "MarginLeft": 12,
                                    "MarginTop": 3,
                                    "HorizontalAlignment": "Left",
                                    "VerticalAlignment": "Center",
                                    "Height": 20,
                                            "VerticalAlignment": "Top",
                                            "ImageOptions": {
                                                "Path": "images/logo_{Item.Driver.GamePlatform}.png",
                                            },
                                },
                                //icon badges
                                {
                                    "BlockType": "itemstack",
                                    "MarginLeft": 6,
                                    "ItemStackOptions": {
                                        "ItemSource": "{Item.Driver.BadgeImages}",
                                        "Template": {
                                            "BlockType": "image",
                                            "Height": 20,
                                            "Source": "{Item}"
                                        }
                                    }
                                },
                                //text badge
                                {
                                    "BlockType": "text",
                                    "MaxWidth": 100,
                                    "MarginLeft": 8,
                                    "Source": "{Item.Driver.BadgeText}",
                                    "HorizontalAlignment": "Left",
                                    "VerticalAlignment": "Top",
                                    "FontName": "{FontNameDefault}",
                                    "FontSize": 14
                                }
                            ]
                        },
                        {
                            "BlockType": "stack",
                            "Orientation": "Horizontal",
                            "Items": [
                                //Team name
                                {
                                    "BlockType": "text",
                                    "MarginLeft": 18,
                                    "Source": "{Item.Team.FullName}",
                                    "Triggers": [
                                        {
                                            "Condition": "{Item.IsReserve}",
                                            "Property": "Source",
                                            "Value": "Reserve"
                                        }
                                    ],
                                    "HorizontalAlignment": "Left",
                                    "FontName": "{FontNameBold}",
                                    "Foreground": "{GreyText}",
                                    "FontSize": 12
                                }
                            ]
                        }
                    ]
                },
                {
                    "BlockType": "Stack",
                    "Orientation": "Horizontal",
                    "MarginTop":0,
                    "Width": "*",
                    "Items": [
                        {
                            "BlockType": "text",
                            "HorizontalAlignment": "Center",
                            "MarginLeft":10,
                            "MarginTop": 55,
                            "Orientation": "Horizontal",
                            "Source": "{Item.Points}",
                            "TextAlignment": "Center",
                            "FontName": "{FontNameBold}",
                            "Foreground": "{BlackText}",
                            "FontSize": 22,
                            "Triggers": [
                                {
                                    //not working api must been set to int ! must fixed later
                                    "Condition": "{Item.Points, Converter=NumberGreater, Parameter=99}",
                                    "Property": "MarginLeft",
                                    "Value": "1"
                                }
                            ],
                        },
                        
                    ]
                }
            ]
        }
    ]
}